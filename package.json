{
  "name": "tesseract",
  "version": "1.0.0",
  "description": "The cosmic cube that controls your warehouse Space",
  "private": true,
  "workspaces": [
    "backend",
    "web",
    "desktop",
    "mobile",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:web && npm run install:desktop && npm run install:mobile",
    "install:backend": "cd backend && npm install",
    "install:web": "cd web && npm install",
    "install:desktop": "cd desktop && npm install",
    "install:mobile": "cd mobile && npm install",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:web": "cd web && npm run dev",
    "dev:desktop": "cd desktop && npm run dev",
    "build:backend": "cd backend && npm run build",
    "build:web": "cd web && npm run build",
    "build:desktop": "cd desktop && npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
