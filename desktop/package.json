{
  "name": "@tesseract/desktop",
  "version": "1.0.0",
  "description": "Tesseract Desktop Application",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run build:preload && wait-on http://localhost:5173 && electron .\"",
    "dev:web": "cd ../web && npm run dev",
    "build": "npm run build:web && npm run build:preload && tsc && electron-builder",
    "build:web": "cd ../web && npm run build",
    "build:preload": "tsc src/preload.ts --outDir dist --target ES2020 --module commonjs --esModuleInterop",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron": "^28.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tesseract.desktop",
    "productName": "Tesseract",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "../web/dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
